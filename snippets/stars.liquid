{% doc %}
  Renders star icons according to the given number.

  @param {number} stars_numbers - Number of stars to render.

  @example
  {% render 'stars', stars: section.settings.stars %}
  {% render 'stars', stars: 5 %}
{% enddoc %}

{% liquid
    assign star_icons = stars_numbers | default: 5
%}
<span class="r-stars">
    {% for star in (1..star_icons) %}
        <svg fill="#000" width="24px" height="24px" viewBox="0 0 24 24" id="star" data-name="Flat Color" xmlns="http://www.w3.org/2000/svg" class="icon flat-color"><path id="primary" d="M22,9.81a1,1,0,0,0-.83-.69l-5.7-.78L12.88,3.53a1,1,0,0,0-1.76,0L8.57,8.34l-5.7.78a1,1,0,0,0-.82.69,1,1,0,0,0,.28,1l4.09,3.73-1,5.24A1,1,0,0,0,6.88,20.9L12,18.38l5.12,2.52a1,1,0,0,0,.44.1,1,1,0,0,0,1-1.18l-1-5.24,4.09-3.73A1,1,0,0,0,22,9.81Z" style="fill: #ffc107 ;"></path></svg>
    {% endfor %}
</span>
{% stylesheet %}
    .r-stars{
        display: flex;
        flex-direction: row;
        gap: 1px;
        align-items: center;
    }
{% endstylesheet %}