{% doc %}
  Sets global CSS variables and loads theme fonts.

  Uses `settings.use_custom_inter` and `settings.type_primary_font` to determine
  which font is active, and exposes the result through CSS custom properties
  on `:root`.
{% enddoc %}

{% style %}
  {%- if settings.use_custom_inter -%}
    :root {
      --font-primary--family: "Inter", system-ui, sans-serif;
      --font-primary--style: normal;
      --font-primary--weight: 400;
    }
  {%- else -%}
    {{ settings.type_primary_font | font_face: font_display: 'swap' }}
    {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
    :root {
      --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
      --font-primary--style: {{ settings.type_primary_font.style }};
      --font-primary--weight: {{ settings.type_primary_font.weight }};
    }
  {%- endif -%}

  :root {
    /* Layout & UI */
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --padding-block: {{ settings.padding_block }}px;
    --section-gap: {{ settings.section_gap }}px;
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;

    /* Refined Color Palette */
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --color-primary: {{ settings.primary_color }};
    --color-hover: {{ settings.hover_color }};
    --color-body-text: {{ settings.body_text }};
    --color-netural: {{ settings.netural_color }};
    --color-footer: {{ settings.footer_color }};
    --color-border: {{ settings.border_color }};
    --color-danger: {{ settings.danger_color }};
    --color-card: {{ settings.card_color }};
    --color-section: {{ settings.sec_color }};

    /* Font Assignments */
    --font-primary-family: var(--font-primary--family);
    --font-primary-weight-regular: var(--font-primary--weight);
    --font-primary-weight-semibold: 600;
    --font-primary-weight-bold: 700;
  }
{% endstyle %}