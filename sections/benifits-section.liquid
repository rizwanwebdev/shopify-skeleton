{% stylesheet %}
    div:has(.benifts-sec) {
    
    background: linear-gradient(
        180deg,
        var(--color-section) 10%,
        var(--color-netural)
    );
    }
    .benifts-sec {
    padding-block: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 30px;
    }
    .badge {
    padding: 1px 14px;
    background-color: var(--color-card);
    border-radius: 50px;
    border: 1px solid var(--color-border);
    width: fit-content;
    }
    .benifts-sec .col {
    border: 2px solid var(--color-border);
    background-color: var(--color-card);
    border-radius: 20px;
    padding: 30px;
    display: flex;
    flex-direction: row;
    gap: 10px;
    }
    .benifts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    width: 90%;
    }
    @media screen and (max-width: 767px) {
    .benifts-grid {
        grid-template-columns: 1fr;
        width: 100%;
    }
    }
    .col-content {
    display: flex;
    flex-direction: column;
    gap: 5px;
    }

    .icon {
    padding: 6px 10px;
    border-radius: 10px;
    background: var(--color-card);
    border: 1px solid var(--color-border);
    width: fit-content;
    height: fit-content;
    }
    .icon svg{
      width: 40px;
      height: 40px;
    }
    .animate-opacity {
    animation: appear linear;
    animation-timeline: view();
    animation-range: entry 0% cover 20%;
    }
    @keyframes appear {
    from {
        opacity: 0;
        transform: translateX(-250px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
    }

{% endstylesheet %}

