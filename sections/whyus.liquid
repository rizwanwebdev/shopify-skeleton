<div class="why-us-sec padding-block padding-inline flex-col">
    <div class="sec-heading">
    <h2>{{ section.settings.section_heading }}</h2>
    <p>{{ section.settings.section_para }}</p>
  </div>
</div>
{% stylesheet %}
    .why-us-sec{
        background: var(--color-section)
    }
{% endstylesheet %}

{% schema %}
    {
    "name": "Why Choose Us",
    "settings": [
        {
        "type": "text",
        "id": "heading",
        "label": "t:labels.heading"
        },
        {
        "type": "text",
        "id": "heading_para",
        "label": "t:labels.heading_para"
        }
        ],
        "presets": [
            {
                "name": "Why Choose Us",
                "settings": {
                "heading":"Why Choose SmileBright?",
                "heading_para":"Get professional results without the professional price tag"
                }
            }
        ]
    }
{% endschema %}