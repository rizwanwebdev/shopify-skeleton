<div class="cta-sec padding-block padding-inline flex-col">
     <div class="sec-heading">
        <h2 class="h1 netural">{{ section.settings.heading }}</h2>
        <p class="larger netural">{{ section.settings.heading_para }}</p>
    </div>
    <div class="price-card">
        <p  class="larger center"><span class="netural larger line-through">{{ section.settings.price_linethrough }}</span> <span class="netural h2 bold center">{{ section.settings.price }}</span></p>
        <p  class=" netural center">{{ section.settings.price_off }}</p>
        <p class="small netural center">{{ section.settings.offer_ends }}</p>
    </div>
    <a href="{{ section.settings.cta_product.url }}" class="button button-solid">
        {{ section.settings.cta_text }}
    </a>
    <div class="cta-extra">
        <p class="netural"><span>{% render 'icon', name: 'shield', size: 20, color: '#fff' %}</span>{{ section.settings.money_back }}</p>
        <p class="netural"><span>{% render 'icon', name: 'truck', size: 20, color: '#fff' %}</span>{{ section.settings.free_shipping }}</p>
        <p class="netural"><span>{% render 'icon', name: 'clock', size: 20, color: '#fff' %}</span>{{ section.settings.shipping_duration }}</p>
    </div>
    <p class="center netural">{{ section.settings.in_stock }}</p>
</div>
{% stylesheet %}

    .cta-sec{
        width: 100%;
        background: linear-gradient(135deg, var(--color-primary) 0%,var(--color-body-text) 100%);
    }
    .price-card{
        display: flex;
        flex-direction: column;
        gap: 8px;
        border: 1px solid var(--color-border);
        padding: 20px;
        background: var(--color-primary);
        backdrop-filter: blur(12px);
        border-radius: 8px;
    }
    .price-card:first-child{
        display: flex;
        flex-direction: row;
        gap: 5px;
        justify-content: center;
        align-items: center;
    }
    .cta-extra{
        display: flex;
        gap: 16px;
        justify-content: center;
        align-items: center;
    }
    .cta-extra p{
        display: flex;
        align-items: start;
        gap: 8px;
    }
    .cta-extra svg{
        min-width: 18px !important;
        min-height: 18px !important;
    }

{% endstylesheet %}
