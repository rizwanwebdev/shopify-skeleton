{% stylesheet %}
    .why-us-sec{
        background: var(--color-section)
    }
    .table{
        min-width: 90%;
        border-radius: 20px;
        border: 2px solid var(--color-border);
        box-shadow: 0 0 15px 1px #00000014;
        overflow: hidden;
    }
    .table table{
        width: 100%;
        border-collapse: collapse;
    }
    .table table th{
        background: var(--color-card);
        border-bottom: 1px solid var(--color-border);
    }
    .table table tr
    {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: 100%;
    }
    .table table tr:not(:last-child){
        border-bottom: 1px solid var(--color-border);
    }
    .table table td,
    .table table th{
        padding: 10px 20px;
        flex: 1;
        text-align: center;
        width: 100%;
    }
    .table-additional{
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 24px;
        justify-content: center;
    }
    .additional-content{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 16px;
    }
    @media screen and (max-width:767px){
    .table-additional{
        grid-template-columns: repeat(2, 1fr);
    }
    }
{% endstylesheet %}

