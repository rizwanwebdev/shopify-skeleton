<div class="why-us-sec padding-block padding-inline flex-col">
    <div class="sec-heading">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.heading_para }}</p>
  </div>
  <div class="table">
    <table>
        <thead>
            <tr>
                <th class="foreground bold">{{ section.settings.th_1 }}</th>
                <th class="bold">{{ section.settings.th_2 }}</th>
                <th class="primary bold">{{ section.settings.th_3 | shop.name }}</th>
            </tr>
        </thead>
        <tbody>
            {% for block in section.blocks %}
                <tr>
                    <td class="foreground font-semi">{{ block.settings.title }}</td>
                    <td>{{ block.settings.cell_2 }}</td>
                    <td class="primary font-semi">{{ block.settings.cell_3 }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
  </div>
</div>
{% stylesheet %}
    .why-us-sec{
        background: var(--color-section)
    }
    .table{
        min-width: 90%;
        border-radius: 20px;
        border: 2px solid var(--color-border);
        box-shadow: 0 0 15px 1px #00000014;
        overflow: hidden;
    }
    .table table{
        width: 100%;
        border-collapse: collapse;
    }
    .table table th{
        background: var(--color-card);
        border-bottom: 1px solid var(--color-border);
    }
    .table table tr
    {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        width: 100%;
    }
    .table table tr:not(:last-child){
        border-bottom: 1px solid var(--color-border);
    }
    .table table td,
    .table table th{
        padding: 10px 20px;
        flex: 1;
        text-align: center;
        width: 100%;
    }
{% endstylesheet %}

