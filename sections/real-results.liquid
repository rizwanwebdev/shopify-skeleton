<div class="real-results flex-col padding-inline padding-block">
    <h2>{{ section.settings.heading }}</h2>
    <div class="results-grid">
        {% for block in section.blocks %}
            <div class="result-steps">
                <h3 class="primary bold center">{{ block.settings.title }}</h3>
                <p class="small center">{{ block.settings.info }}</p>
            </div>
        {% endfor %}
    </div>
</div>
{% stylesheet %}
    .results-grid{
        display: grid;
        grid-template-columns: repeat(4,1fr);
        gap: 24px;
    }
    .result-steps{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 25px;
        border-radius: 8px;
        background: var(--color-netural);
        border: 1px solid var(--color-border);
    }
    @media screen and (max-width:767px){
        .results-grid{
            grid-template-columns:repeat(2, 1fr);
        }
    }
{% endstylesheet %}
{% schema %}
    {
        "name": "Real Results",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:labels.heading"
            }
        ],
        "blocks": [
            {
                "type": "result_steps",
                "name":"block",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "t:labels.title"
                    },{
