<div class="comprarion-sec padding-block padding-inline flex-col">
  <div class="sec-heading">
    <h2>{{ section.settings.section_heading }}</h2>
    <p>{{ section.settings.section_para }}</p>
  </div>
  <div class="comparison-sec-grid">
  <!-- Mistakes column -->
  <div class="block-col">
    <div  class="block-heading animate-right">
    {% for block in section.blocks %}
      {% if block.type == 'mistakes_group' %}
        <span class="h-icon danger">{{ "icon-circle-x.svg" | inline_asset_content }}</span>
        <h4>{{ block.settings.block_heading }}</h4>
      {% endif %}
    {% endfor %}
    </div>
    <div  class="block-col-row">
    {% for block in section.blocks %}
      {% if block.type == 'mistake_item' %}
        <div class="block-row animate-right">
           <span class="h-icon danger">{{ "icon-circle-x.svg" | inline_asset_content }}</span>
         <div>
           <h5>{{ block.settings.title }}</h5>
          <p>{{ block.settings.info }}</p>
         </div>
        </div>
      {% endif %}
    {% endfor %}
    </div>
  </div>

  <!-- Solutions column -->
  <div class="block-col">
 <div class="block-heading animate-left">
     {% for block in section.blocks %}
      {% if block.type == 'solutions_group' %}
        <span class="primary">{{ "icon-circle-check-big.svg" | inline_asset_content }}</span>
        <h4>{{ block.settings.block_heading }}</h4>
      {% endif %}
    {% endfor %}
 </div>

  <div class="block-col-row">
      {% for block in section.blocks %}
      {% if block.type == 'solution_item' %}
        <div class="block-row animate-left">
          <span class="primary">{{ "icon-circle-check-big.svg" | inline_asset_content }}</span>
         <div>
           <h5>{{ block.settings.title }}</h5>
          <p>{{ block.settings.info }}</p>
         </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  </div>

</div>
</div>


{% stylesheet %}
    .comprarion-sec{
      background: linear-gradient(135deg, var(--color-netural) 0%, var(--color-background) 100%);
    }
    .comparison-sec-grid{
      display: grid;
      grid-template-columns: repeat(2,1fr);
      gap: 20px;
    }
    .block-col{
      display: flex;
      flex-direction: column;
      gap: 30px;
    }

    .block-heading {
      display: flex;
      flex-direction: row;
      gap: 10px;
      align-items: center;
    }
    .block-heading span{
      padding: 10px;
      border-radius: 10px;
      background-color: var(--color-card);
    }
    .block-row{
      display: flex;
      flex-direction: row;
      gap: 8px;
      padding: 20px;
      background-color: var(--color-card);
      border-radius: 10px;
      border: 1px solid var(--color-border);
    }
    .block-col-row{
      display: flex;
      flex-direction: column;
      gap: 10px;

    }


    @media (max-width:767px){
      .comparison-sec-grid{
      grid-template-columns: 1fr;
      }
    }
{% endstylesheet %}
