<div class="comprarion-sec">
  <div class="sec-headings">
    <h2>{{ section.settings.section_heading }}</h2>
    <p>{{ section.settings.section_para }}</p>
  </div>
  <div class="comparison-sec-grid">
  <!-- Mistakes column -->
  <div class="block-col">
    {% for block in section.blocks %}
      {% if block.type == 'mistakes_group' %}
        <h3>{{ block.settings.block_heading }}</h3>
      {% endif %}
    {% endfor %}

    {% for block in section.blocks %}
      {% if block.type == 'mistake_item' %}
        <div>
          <h4>{{ block.settings.title }}</h4>
          <p>{{ block.settings.info }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <!-- Solutions column -->
  <div class="block-col">
    {% for block in section.blocks %}
      {% if block.type == 'solutions_group' %}
        <h3>{{ block.settings.block_heading }}</h3>
      {% endif %}
    {% endfor %}

    {% for block in section.blocks %}
      {% if block.type == 'solution_item' %}
        <div>
          <h4>{{ block.settings.title }}</h4>
          <p>{{ block.settings.info }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>

</div>
</div>


{% stylesheet %}
    div:has(.comprarion-sec){
      background-color: var(--color-netural);
      padding-block: 70px;
    }
    .comprarion-sec{
      display: flex;
      flex-direction: column;
      gap: 20px;
      justify-content: center;
    }
    .sec-headings{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    .comparison-sec-grid{
      display: grid;
      grid-template-columns: repeat(2,1fr);
      gap: 20px;
    }
      @media (max-width:768px){
        .comparison-sec-grid{
        grid-template-columns: 1fr;
    }
    }
{% endstylesheet %}
